<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="DB이름을 입력하세요"
            android:id="@+id/_22_dbNameEt" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DB 생성"
            android:id="@+id/_22_dbCreateBtn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Table이름을 입력하세요"
            android:id="@+id/_22_tableNameEt" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Table 생성"
            android:id="@+id/_22_tableCreateBtn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름을 입력하세요!"
            android:id="@+id/_22_empNameEt" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="나이를 입력하세요!"
            android:id="@+id/_22_empAgeEt" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="전화번호를 입력하세요!"
            android:id="@+id/_22_empMobileEt" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사용자 입력"
            android:id="@+id/_22_empInsertBtn" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="모든 사람 출력!!"
        android:id="@+id/_22_empSelectBtn" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/_22_resultTv" />
    </ScrollView>

</LinearLayout>